
<%= simple_form_for(@component) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :brand %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :markup %>
    <%= f.input :style %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
