<li class="d-block">
  <div class="color card mb-1">
    <div class=" d-flex align-items-center ">
    <div class="swatch" style="background:<%= color.hex %>;"></div>
      <div class="card-body py-2 d-flex align-items-center">
        <ul class="list-inline">
          <li class="list-inline-item"><%= color.hex %></li>
        </ul>
        <% if current_user_authorized_for_brand? %>
          <div class="dropdown ml-auto">
            <a class="btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= octicon "kebab-vertical", height:20, class:'ml-1' %>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
              <%= link_to 'Edit', edit_color_path(color), class:'dropdown-item' %>
              <%= link_to 'Delete', color, method: :delete, data:{confirm:'Are you sure?'}, class:'dropdown-item' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</li>
