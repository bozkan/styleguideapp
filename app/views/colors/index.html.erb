<header class="mb-4 row align-items-end">
  <div class="col-md-9">
    <h1 class="h3 mb-0">Colors</h1>
  </div>
  <div class="col-md-3 text-right">
    <%= link_to 'Add Color', new_color_path, class:'btn btn-sm btn-primary' if current_user_authorized_for_brand? %>
  </div>
</header>


<% if @colors.exists? %>
  <ul class="list-unstyled color-list">
    <% @colors.each do |color| %>
      <li class="color">
        <div class="card">
          <div class="card-header d-flex align-items-center font-weight-bold">
            Red
            <div class="dropdown icon-dropdown ml-auto">
              <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= octicon "kebab-vertical", height:20, class:'ml-1' %>
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                <%= link_to 'Edit', edit_color_path(color), class:'dropdown-item' %>
                <%= link_to 'Delete', color, method: :delete, data:{confirm:'Are you sure?'}, class:'dropdown-item' %>
              </div>
            </div>
          </div>
          <div class="card-body font-size-16">
            <%= color.hex %>
          </div>
          <div class="card-markup" style="background:<%= color.hex %>;"></div>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>
