<header class="mb-4 row align-items-end">
  <div class="col-md-9">
    <h1 class="h3 mb-0">Colors</h1>
  </div>
  <div class="col-md-3 text-right">
    <%= link_to 'Add Color', new_color_path, class:'btn btn-sm btn-primary' if current_user_authorized_for_brand? %>
  </div>
</header>


<% if @colors.exists? %>
  <ul class="list-unstyled color-list row">
    <% @colors.each do |color| %>
      <li class="col-lg-12">
        <div class="color card mb-1">
          <div class=" d-flex align-items-center ">
          <div class="swatch" style="background:<%= color.hex %>;"></div>
            <div class="card-body py-2 d-flex align-items-center">
              <ul class="list-inline">
                <li class="list-inline-item">Red</li>
                <li class="list-inline-item"><%= color.hex %></li>
              </ul>
              <% if current_user_authorized_for_brand? %>
                <div class="dropdown ml-auto">
                  <a class="btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <%= octicon "kebab-vertical", height:20, class:'ml-1' %>
                  </a>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                    <%= link_to 'Edit', edit_color_path(color), class:'dropdown-item' %>
                    <%= link_to 'Delete', color, method: :delete, data:{confirm:'Are you sure?'}, class:'dropdown-item' %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>
 <%= render 'panel' %>
