
<%= simple_form_for(@font) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <div class="form-row">
      <%= f.input :size, wrapper_html:{class:'col-lg-4'} %>
      <%= f.input :line_height, wrapper_html:{class:'col-lg-4'} %>
      <%= f.input :weight, wrapper_html:{class:'col-lg-4'} %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
